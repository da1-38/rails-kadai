<p class="succes"><%= flash[:notice] %></p>
<h1>Books</h1>

<table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to "Show", book_path(book.id)%></td>
         <td><%= link_to "Edit", edit_book_path(book.id)%></td>
         <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
    </tbody>
</table>

<h2>New book</h2>
<!--form_with wotsukau-->
<%= form_for (@book) do |f| %>

<!--partial kasuru-->
